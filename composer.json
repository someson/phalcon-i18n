{
    "name": "someson/phalcon-i18n",
    "description": "Multi-lingual support (extended)",
    "license": "MIT",
    "keywords": ["phalcon", "i18n", "translate"],
    "type": "library",
    "require": {
        "php": "8.0.*",
        "ext-json": "*",
        "ext-phalcon": "5.0.*"
    },
    "require-dev": {
        "codeception/codeception": "^4.1",
        "codeception/module-asserts": "^1.3",
        "codeception/module-phalcon5": "^1.0",
        "phalcon/ide-stubs": "v5.0.0-RC1",
        "phpstan/phpstan": "^0.12"
    },
    "authors": [
        {
            "name": "someson",
            "email": "somevov4ik@gmail.com"
        }
    ],
    "suggest": {
        "ext-yaml": "Needed to support YAML format as an adapter class"
    },
    "autoload": {
        "psr-4": {
            "Phalcon\\I18n\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Unit\\": "tests/unit/"
        }
    }
}
